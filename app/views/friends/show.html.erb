<div class="card text-center">
  <div class="card-header">
    Friend
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= @friend.first_name %> <%= @friend.last_name %></h5>
    <p class="card-text">Email: <%= @friend.email %></p>
    <p class="card-text">Phone: <%= @friend.phone %></p>
    <p class="card-text">Twitter: <%= @friend.twitter %></p>
    <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %> 
    <%= link_to "Back to friends", friends_path, class:"btn btn-dark" %>
  </div>
</div>
